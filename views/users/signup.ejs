<% layout("/layouts/boilerplate") %>

<div class="row">
    <h1 class="col-6 offset-3">SignUp for WanderLust</h1>
    <div class="col-6 offset-3">
        <form action="/signup" method="POST" class="needs-validation" novalidate>
            <div class="mb-3">
                <label for="username" class="form-label">Username</label>
                <input type="text" name="username" placeholder="Enter username" class="form-control" id="username" required>
                <div class="valid-feedback">Looks good!</div>
                <div class="invalid-feedback">Please enter username</div>
            </div>

            <div class="mb-3">
                <label for="email" class="form-label">Email</label>
                <input type="email" name="email" placeholder="Enter email" class="form-control" id="email" required>
            </div>

            <div class="mb-3">
                <label for="password" class="form-label">Password</label>
                <input type="password" name="password" placeholder="Enter password" class="form-control" id="password" required>
            </div>

            <button class="btn btn-success">SignUp</button>
        </form>
    </div>
</div>